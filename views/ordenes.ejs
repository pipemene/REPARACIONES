<!DOCTYPE html>
<html>
<head>
  <title>Órdenes de Servicio</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h2>Órdenes de Servicio</h2>
  <p>Bienvenido <%= user.Usuario %> (Rol: <%= user.Rol %>)</p>
  <a href="/logout">Salir</a>
  <table>
    <thead>
      <tr>
        <% if (ordenes.length > 0) { Object.keys(ordenes[0]).forEach(k => { %>
          <th><%= k %></th>
        <% }) } %>
      </tr>
    </thead>
    <tbody>
      <% ordenes.forEach(o => { %>
        <tr>
          <% Object.values(o).forEach(v => { %>
            <td><%= v %></td>
          <% }) %>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
